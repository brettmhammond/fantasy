<%= form_for(@player) do |f| %>
  <% if @player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
      <% @player.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :position_id %><br>
    <%= f.select :position_id, options_from_collection_for_select(Position.all.order('position'), "id", "position", @player.position_id) %>
  </div>
  <div class="field">
    <%= f.label :team_id %><br>
    <%= f.select :team_id, options_from_collection_for_select(Team.all.order('name'), "id", "name", @player.team_id) %>
  </div>
  <div class="field">
    <%= f.label :headshot %><br>
    <%= f.text_field :headshot %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
