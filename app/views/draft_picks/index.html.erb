<h1>Listing draft_picks</h1>

<table>
  <thead>
    <tr>
      <th>Draft</th>
      <th>Fantasy team</th>
      <th>Player</th>
      <th>Position</th>
      <th>Team</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @draft_picks.each do |draft_pick| %>
      <tr>
        <td><%= draft_pick.draft.id %></td>
        <td><%= draft_pick.fantasy_team.name %></td>
        <td><%= draft_pick.player.name %></td>
        <td><%= draft_pick.player.position.position %></td>
        <td>
          <img src="<%= draft_pick.player.team.logo %>" width="20"/>
          <%= draft_pick.player.team.name %> (<%= draft_pick.player.team.short_name %>)
        </td>
        <td>$<%= draft_pick.price %></td>
        <td><%= link_to 'Show', draft_pick %></td>
        <td><%= link_to 'Edit', edit_draft_pick_path(draft_pick) %></td>
        <td><%= link_to 'Destroy', draft_pick, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

