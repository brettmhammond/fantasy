<h4>Schedules</h4>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Week</th>
      <th>Away team</th>
      <th></th>
      <th></th>
      <th>Home team</th>
      <th>Date</th>
      <th>Station</th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.week %></td>
        <td><%= schedule.away_team.full_name %></td>
        <td align="right"><img src="<%= schedule.away_team.logo %>" width="25" alt="" /></td>
        <td><img src="<%= schedule.home_team.logo %>" width="25" alt="" /></td>
        <td><%= schedule.home_team.full_name %></td>
        <td><%= schedule.date %> <%= schedule.time %></td>
        <td><%= schedule.broadcaster %></td>
      </tr>
    <% end %>
  </tbody>
</table>
