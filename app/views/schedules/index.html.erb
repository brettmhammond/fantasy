<h1>Listing schedules</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Year</th>
      <th>Week</th>
      <th>Date</th>
      <th>Away team</th>
      <th>Home team</th>
      <th>Time</th>
      <th>Broadcaster</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.year %></td>
        <td><%= schedule.week %></td>
        <td><%= schedule.date %></td>
        <td><%= schedule.away_team.full_name %></td>
        <td><%= schedule.home_team.full_name %></td>
        <td><%= schedule.time %></td>
        <td><%= schedule.broadcaster %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

